@inherits Irma.Base.DishListBase

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Ingredients</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in dishes)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@string.Join(", ", dish.Ingredients)</td>
                <td>@dish.Price</td>
            </tr>
        }
    </tbody>
</table>